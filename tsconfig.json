{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": false,
    "removeComments": true,
    "types": ["jest"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", ".src/__tests__"]
}
